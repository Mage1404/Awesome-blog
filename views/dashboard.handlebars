{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}



<div class="d-grid gap-2">
  <a href="/add"><button class="btn btn-primary" type="button">+ New Post</button></a>
</div>
