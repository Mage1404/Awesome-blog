<section>
  <div class="mb-3">
    <label for="post-title" class="form-label">Title</label>
    <input
      type="text"
      class="form-control"
      id="post-title"
      value="{{post.title}}"
    />
  </div>
  <div class="mb-3">
    <label for="post-content" class="form-label">Post Content</label>
    <textarea
      class="form-control"
      id="post-content"
      rows="3"
    >{{post.content}}</textarea>
  </div>
  <button type="button" id="update-post" class="btn btn-primary">Update</button>
  <button type="button" id="delete-post" class="btn btn-danger">Delete</button>
</section>

{{#if loggedIn}}{{/if}}